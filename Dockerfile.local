FROM node:6
MAINTAINER o2r-project <https://o2r.info>
RUN mkdir -p /usr/src/app 
WORKDIR /usr/src/app

# Install app dependencies 
COPY package.json /usr/src/app/ 
# Bundle app source 
RUN npm install --production
COPY . /usr/src/app 
EXPOSE 8089 

# run the app and the testserver 
CMD ["npm", "start"]

